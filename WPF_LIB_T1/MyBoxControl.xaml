<UserControl x:Class="WPF_LIB_T1.MyBoxControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_LIB_T1"
             mc:Ignorable="d"  x:Name="x1" HorizontalAlignment="Center" VerticalAlignment="Center" 
             >
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <Border BorderBrush="Black" BorderThickness="2" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="{Binding ElementName=x1, Path=BoxName}" Background="#FF878787"    Name="TB" FontSize="22" VerticalAlignment="Center" HorizontalAlignment="Center" />

        </Border>
    </Grid>
</UserControl>
